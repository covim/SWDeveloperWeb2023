@model Wifi.SD.Core.Application.Movies.Results.MovieDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />

    <div class="row justify-content-center">Test</div>

    <dl class="dl-horizontal">
        <dt class = "col-sm-2">
            @BasicRes.Genre
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.GenreName)*@
            @Model.GenreName
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.MediumType
        </dt>
        <dd class = "col-sm-10">
            @(Model.MediumTypeName + " (" + (Model.MediumTypeCode) + ")")
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.Title
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.Title)*@
            @Model.Title
        <dt class = "col-sm-2">
            @BasicRes.ReleaseDate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.Price
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.Price)*@
            @*@Model.Price.ToString("N")*@
            @(string.Format(Model.Price.ToString(), "{0:N}"))
        </dd>
        <dt class = "col-sm-2">
            @BasicRes.Rating
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.Rating)*@
            @Model.Rating
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@BasicRes.Edit</a> |
    <a asp-action="Index">@BasicRes.Cancel</a>
</div>
